// ğŸ”¹ Problem: Spiral Matrix  
// ğŸ”— Link: https://leetcode.com/problems/spiral-matrix/  
// ğŸ§  Tags: Arrays, Matrix  
// âœ… Status: Solved (Optimal Only)

// ------------------------------------------------
// ğŸ”¸ Optimal Approach
// ğŸ’¡ Simulate traversal using boundary pointers
// ğŸ•’ Time Complexity: O(m * n)
// ğŸ” Space Complexity: O(1) (excluding result vector)
// ------------------------------------------------
vector<int> spiralOrder(vector<vector<int>>& matrix) {
    vector<int> result;
    if (matrix.empty()) return result;

    int top = 0, bottom = matrix.size() - 1;
    int left = 0, right = matrix[0].size() - 1;

    while (top <= bottom && left <= right) {
        for (int i = left; i <= right; i++) result.push_back(matrix[top][i]);
        top++;
        for (int i = top; i <= bottom; i++) result.push_back(matrix[i][right]);
        right--;
        if (top <= bottom) {
            for (int i = right; i >= left; i--) result.push_back(matrix[bottom][i]);
            bottom--;
        }
        if (left <= right) {
            for (int i = bottom; i >= top; i--) result.push_back(matrix[i][left]);
            left++;
        }
    }

    return result;
}
